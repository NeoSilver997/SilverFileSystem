# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=silverfilesystem

# JWT Authentication Configuration
# IMPORTANT: Set this to a secure random value in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-random-jwt-secret-here

# Admin User Configuration
# Set these to create the default admin user with specific credentials
# If not set, a random password will be generated and displayed on first startup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
