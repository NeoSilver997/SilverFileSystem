{
  "scanner": {
    "followSymlinks": false,
    "maxDepth": 100,
    "excludePatterns": [
      "node_modules",
      ".git",
      ".cache",
      "temp",
      "tmp"
    ]
  },
  "duplicates": {
    "minSize": 0,
    "useQuickHash": true
  },
  "largeFiles": {
    "minSizeMB": 100,
    "limit": 50
  }
}
